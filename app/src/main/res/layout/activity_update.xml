<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity"
    android:background="@drawable/profilebg">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar3"
        android:background="#434341"
        app:title="Update Profile"
        app:titleTextColor="@color/white"
        app:titleMarginStart="130dp"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/name1"
        android:hint="Full Name"
        android:textColorHint="@color/black"
        android:layout_below="@id/toolbar3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/phonenumber1"
        android:hint="Phone number"
        android:textColorHint="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:inputType="phone"
        android:layout_below="@id/name1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:layout_below="@id/phonenumber1"
        android:id="@+id/genderupdate"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_marginLeft="60dp"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/genderupdate"
        android:id="@+id/radioGroupupdate"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:id="@+id/maleupdate"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Female"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:id="@+id/femaleupdate"
            />


    </RadioGroup>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGroupupdate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Update"
        android:textStyle="bold"
        android:id="@+id/updatebutton"
        />




</RelativeLayout>